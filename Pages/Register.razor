@page "/register"
@inject AuthService AuthService
@inject NavigationManager Navigation


<PageTitle>Sign Up - FlavorShare</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>üéâ Join FlavorShare!</h1>
            <p>Create an account to start sharing your recipes</p>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-error">
                ‚ö†Ô∏è @_errorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <div class="alert alert-success">
                ‚úÖ @_successMessage
            </div>
        }

        <EditForm Model="_registerRequest" OnValidSubmit="HandleRegister" FormName="registerForm">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label class="form-label" for="username">Username</label>
                <InputText id="username" class="form-input" @bind-Value="_registerRequest.Username" 
                           placeholder="Pick a cool username" />
                <ValidationMessage For="@(() => _registerRequest.Username)" class="form-error" />
            </div>

            <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <InputText id="email" class="form-input" @bind-Value="_registerRequest.Email" 
                           placeholder="your@email.com" type="email" />
                <ValidationMessage For="@(() => _registerRequest.Email)" class="form-error" />
            </div>

            <div class="form-group">
                <label class="form-label" for="password">Password</label>
                <InputText id="password" class="form-input" @bind-Value="_registerRequest.Password" 
                           placeholder="At least 6 characters" type="password" />
                <ValidationMessage For="@(() => _registerRequest.Password)" class="form-error" />
            </div>

            <div class="form-group">
                <label class="form-label" for="confirmPassword">Confirm Password</label>
                <InputText id="confirmPassword" class="form-input" @bind-Value="_registerRequest.ConfirmPassword" 
                           placeholder="Type your password again" type="password" />
                <ValidationMessage For="@(() => _registerRequest.ConfirmPassword)" class="form-error" />
            </div>

            <button type="submit" class="btn-primary btn-lg" style="width: 100%;" disabled="@_isSubmitting">
                @if (_isSubmitting)
                {
                    <span>Creating account...</span>
                }
                else
                {
                    <span>‚ú® Create Account</span>
                }
            </button>
        </EditForm>

        <div class="auth-footer">
            Already have an account? <a href="login">Login here</a>
        </div>
    </div>
</div>

@code {
    private RegisterRequest _registerRequest = new();
    private bool _isSubmitting = false;
    private string _errorMessage = string.Empty;
    private string _successMessage = string.Empty;

    protected override void OnInitialized()
    {
        // redirect if already logged in
        if (AuthService.IsAuthenticated)
        {
            Navigation.NavigateTo("");
        }
    }

    private async Task HandleRegister()
    {
        _isSubmitting = true;
        _errorMessage = string.Empty;

        try
        {
            var (success, message) = await AuthService.RegisterAsync(_registerRequest);
            
            if (success)
            {
                _successMessage = message;
                await Task.Delay(500);
                Navigation.NavigateTo("");
            }
            else
            {
                _errorMessage = message;
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Registration failed: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
