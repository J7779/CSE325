@page "/login"
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Login - FlavorShare</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>üëã Welcome Back!</h1>
            <p>Login to share and save your favorite recipes</p>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-error">
                ‚ö†Ô∏è @_errorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <div class="alert alert-success">
                ‚úÖ @_successMessage
            </div>
        }

        <EditForm Model="_loginRequest" OnValidSubmit="HandleLogin" FormName="loginForm">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <InputText id="email" class="form-input" @bind-Value="_loginRequest.Email" 
                           placeholder="your@email.com" type="email" />
                <ValidationMessage For="@(() => _loginRequest.Email)" class="form-error" />
            </div>

            <div class="form-group">
                <label class="form-label" for="password">Password</label>
                <InputText id="password" class="form-input" @bind-Value="_loginRequest.Password" 
                           placeholder="Your password" type="password" />
                <ValidationMessage For="@(() => _loginRequest.Password)" class="form-error" />
            </div>

            <button type="submit" class="btn-primary btn-lg" style="width: 100%;" disabled="@_isSubmitting">
                @if (_isSubmitting)
                {
                    <span>Logging in...</span>
                }
                else
                {
                    <span>üöÄ Login</span>
                }
            </button>
        </EditForm>

        <div class="auth-footer">
            Don't have an account? <a href="/register">Sign up here</a>
        </div>

        <!-- demo login hint -->
        <div class="alert alert-info mt-2">
            <strong>Demo Account:</strong><br />
            Email: marco@recipes.com<br />
            Password: password123
        </div>
    </div>
</div>

@code {
    private LoginRequest _loginRequest = new();
    private bool _isSubmitting = false;
    private string _errorMessage = string.Empty;
    private string _successMessage = string.Empty;

    protected override void OnInitialized()
    {
        // redirect if already logged in
        if (AuthService.IsAuthenticated)
        {
            Navigation.NavigateTo("/");
        }
    }

    private async Task HandleLogin()
    {
        _isSubmitting = true;
        _errorMessage = string.Empty;

        try
        {
            var (success, message) = await AuthService.LoginAsync(_loginRequest);
            
            if (success)
            {
                _successMessage = message;
                await Task.Delay(500);
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                _errorMessage = message;
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Login failed: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
